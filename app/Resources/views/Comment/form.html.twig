<div class="well">
    {{ form_start(form_comment, {'action': path('live_add_comment', {'id' : id} ), 'attr': {'class': 'form-horizontal'} } ) }}
    {{ form_errors(form_comment) }}


    <div class="form-group">
        {{ form_label(form_comment.title, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

        {{ form_errors(form_comment.title) }}

        <div class="col-sm-10">
            {{ form_widget(form_comment.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form_comment.content, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form_comment.content) }}
        <div class="col-sm-10">
            {{ form_widget(form_comment.content, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_widget(form_comment.save, {'attr': {'class': 'btn btn-success'}}) }}

    {{ form_rest(form_comment) }}

    {{ form_end(form_comment) }}
</div>