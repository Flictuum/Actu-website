{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}
        Supprimer une annonce - {{ parent() }}
{% endblock %}

{% block live_body %}

        <h2> {{ 'news.delete.name' | trans }}</h2>

        <p>
                {{ 'news.delete.core' | trans({ '%title%' : post.title}) }}
        </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
        <form action="{{ path('live_delete', {'id': post.id}) }}" method="post">
                <a href="{{ path('live_home', {'id': post.id}) }}" class="btn btn-default">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        {{ 'news.edit.return_list' | trans }}
                </a>
            {# Ici j'ai écrit le bouton de soumission à la main #}
                <input type="submit" value="{{ 'news.delete.button' | trans }}" class="btn btn-danger" />
            {# Ceci va générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>

{% endblock %}