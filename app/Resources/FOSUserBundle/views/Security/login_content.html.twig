{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group row">
        <label class="control-label col-md-5 " for="username">{{ 'security.login.username' | trans }}</label>
        <input class="form-control col-md-2 " type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
        <label class="control-label col-md-5 " for="password">{{ 'security.login.password' | trans }}</label>
        <input class="form-control col-md-2 " type="password" id="password" name="_password" required="required" />
    </div>

    <div class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me' | trans }}</label>
    </div><br>

    <input type="submit"
           class="btn btn-success"
           id="_submit"
           name="_submit"
           value="{{ 'security.login.submit' | trans }}" />
    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">
        <i class="glyphicon glyphicon-edit"></i>   {{ 'layout.register' | trans }}
    </a>
</form>
